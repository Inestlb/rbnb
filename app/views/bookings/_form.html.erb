<%= simple_form_for([@celebrities, bookings]) do |f| %>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title text-center mb-4">Réservation</h2>

            <!-- Select a celebrity -->
            <div class="mb-3">
              <%= f.label :celebrity_id, "Select a celebrity", class: "form-label" %>
              <%= f.collection_select :celebrity_id, @celebrities, :id, :name, { prompt: "Select a celebrity" }, { class: "form-control" } %>
            </div>

            <!-- Select an activity -->
            <div class="mb-3">
              <%= f.input :activity, label: "Select an activity", input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
              <%= f.collection_select :activity, { prompt: "Select an activity" }, { class: "form-control" } %>
            </div>

            <!-- Select a date -->
            <div class="mb-3">
            </div>

            <!-- Submit button -->
            <div class="d-flex justify-content-center mt-4">
              <%= f.submit "Réserver", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

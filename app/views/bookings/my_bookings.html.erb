<div class="container my-5">
  <div style="border-radius: 16px; overflow: hidden;">
    <h2 class="text-center my-4">Demandes de réservation</h2>
      <div class="table-responsive">
        <% if @bookings.any? %>
      <table class="table table-bordered table-hover">
        <thead class="table-light">
          <tr>
            <th>Nom</th>
            <th>Activité</th>
            <th>Statut</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @bookings.each do |booking| %>
          <tr>
            <!-- Photo -->
            <!-- Nom -->
              <td><%= booking.celebrity.name %></td>
            <!-- Activité -->
              <td><%= booking.activity %></td>
            <!-- Utilisateur -->
            <!-- Statut -->
              <td>
                <span class="badge
                  <%= booking.status == 'pending' ? 'bg-warning text-dark' :
                      booking.status == 'accepted' ? 'bg-success' : 'bg-danger' %>">
                  <%= booking.status.capitalize %>
                </span>
              </td>
            <!-- Action -->
              <td>
                <%= link_to "accepted", accept_path(booking),
                           class: "btn btn-success btn-sm",
                           data: { turbo_method: "PATCH" } %>
                <%= link_to "refused", refuse_path(booking),
                           class: "btn btn-danger btn-sm",
                           data: { turbo_method: "PATCH" } %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center">
        <p>Aucune réservation trouvée pour vos célébrités.</p>
      </div>
    <% end %>
  </div>
</div>
</div>

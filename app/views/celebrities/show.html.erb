<div class="container my-5 d-flex justify-content-center">
  <div class="card shadow-sm" style="border-radius: 15px; max-width: 900px; width: 100%;">
    <div class="card-body p-5">
      <h2 class="card-title text-center mb-4 content-font fw-bold"><%= @celebrity.name %></h2>
      <%# <% @celebrity.photos.each do |photo| %>
        <%# <%= cl_image_tag photo.key %>
      <%# <% end %>

  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
    <% @celebrity.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <%= cl_image_tag photo.key, class: "show-img d-block mx-auto", crop: "thumb", gravity: "face" %>
      </div>
    <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

      <div class="card-text my-4">
  <div class="d-flex align-items-center mb-3">
    <i class="fas fa-star text-warning me-2"></i>
    <p class="mb-0"><strong>Rating:</strong> <%= @celebrity.rating %> / 5</p>
  </div>
  <div class="mb-3">
    <p class="star-note">
  <i class="fa-solid fa-comment-dots"></i>
  <span><strong>Un mot de ta star:</strong> <%= @celebrity.word %></span>
    </p>
  <div class="d-flex align-items-center mb-3">
    <i class="fas fa-money-bill-wave text-success me-2"></i>
    <p class="mb-0"><strong>Prix à l'heure:</strong> <%= @celebrity.price_per_hour %> €</p>
  </div>
  <div class="d-flex align-items-center">
    <i class="fas fa-map-marker-alt text-danger me-2"></i>
    <p class="mb-0"><strong>Localisation:</strong> <%= @celebrity.location %></p>
  </div>
</div>

<div class="d-flex justify-content-center mt-4">
  <%= link_to "Réserver", new_celebrity_booking_path(@celebrity), class: "btn btn-primary me-3 px-4" %>
  <%= link_to "Retour", celebrities_path, class: "btn btn-secondary px-4" %>
</div>

<div class="container my-5 d-flex justify-content-center">
  <div class="card shadow-sm" style="border-radius: 15px; max-width: 900px; width: 100%;">
    <div class="card-body p-5">
      <h2 class="card-title text-center mb-4 fw-bold"><%= @celebrity.name %></h2>

     <div class="image-card-show"> <img src="<%= @celebrity.images %>"  alt="<%= @celebrity.name %> profile image" class="w-100"> </div>
      <p class="card-text"><i class="fa-solid fa-star"></i><strong> Rating:</strong> <%= @celebrity.rating %> / 5</p>
      <p class="card-text"><i class="fa-solid fa-comment"></i><strong> Un mot de ta star:</strong> <%= @celebrity.word%></p>
      <p class="card-text"><i class="fa-solid fa-tag"></i><strong> Prix à l'heure:</strong> <%= @celebrity.price_per_hour %> $</p>
      <p class="card-text"><i class="fa-solid fa-location-dot"></i><strong> Localisation:</strong> <%= @celebrity.location %></p>


     <div class="d-flex justify-content-center mt-4">
        <%= link_to "Réserver", new_celebrity_booking_path(@celebrity), class: "btn show-btn me-2" %>
        <%= link_to "Retour", celebrities_path, class: "btn show-btn me-2" %>
    </div>
  </div>
</div>

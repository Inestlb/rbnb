<h2 class="text-center my-5">Mes Réservations</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @bookings.each do |booking| %>
    <div class="col">
      <div class="card h-100 shadow">
        <!-- Image de la réservation -->
        <img src="<%= booking.celebrity.images %>" class="card-img-top" alt="Image de réservation" style="object-fit: cover; height: 200px;">

        <!-- Contenu de la carte -->
        <div class="card-body d-flex flex-column justify-content-between">
          <!-- Prix total -->
          <h5 class="card-title text-center text-primary mb-4">Prix total : <%= number_to_currency(booking.total_price, unit: "$") %></h5>

          <!-- Détails de la réservation -->
          <p class="card-text"><strong>Célébrité:</strong> <%= booking.celebrity.name %></p>
          <p class="card-text"><strong>Activité:</strong> <%= booking.activity %></p>
          <p class="card-text"><strong>État de la réservation:</strong> <%= booking.status %></p>
        </div>

      </div>
    </div>
  <% end %>
</div>
